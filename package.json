{
  "name": "taggy",
  "displayName": "Taggy",
  "description": "Adds tags or badges to files in the VS Code Explorer.",
  "version": "0.0.1",
  "publisher": "mub",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "taggy.addTag",
        "title": "Add Tag to File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "taggy.addTag",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.19.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}